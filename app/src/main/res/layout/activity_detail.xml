<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="it.marcoliv.popmovies.activities.DetailActivity"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="Title"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        android:paddingTop="30dp"
        android:paddingBottom="60dp"
        android:paddingLeft="20sp"
        android:background="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:src="@mipmap/ic_launcher"
        android:minHeight="@android:dimen/thumbnail_height"
        android:minWidth="@android:dimen/thumbnail_width"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release_date"
        android:textSize="40sp"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/imgThumb"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        android:textSize="30sp"
        android:layout_below="@+id/tvYear"
        android:layout_toRightOf="@+id/imgThumb"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/vote"
        android:layout_below="@+id/tvDuration"
        android:layout_toRightOf="@+id/imgThumb"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/imgThumb"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical|right"
        />


</RelativeLayout>